<%= form_for([@recipe, @item]) do |f| %>
<div class="control-group">
    <%= f.label :ingredient, class: "control-label"  %>
    <div class="controls">
      <%= f.collection_select :storable_id , Ingredient.all, :id, :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :quantity, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :quantity %>
    </div>
  </div>
  
  <div class="control-group">
    <label class="control-label">
      Tipo:
    </label>
    <div class="controls">
    <%= select_tag :quantity_type_id, options_for_select([
        ["Kg", 1],
        ["gr", 2],
        ["unidade",3],
        ["Lt", 4],
        ["ml", 5]
      ]) %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Save", class: "btn btn-primary"%>
  </div>
<% end %>