<%= form_for([@stock, @item]) do |f| %>
  <div class="well">
    <p>
      <strong>Nome:</strong>
      <%= @item.storable.name %>
    </p>
  </div>

  <div class="control-group">
    <%= f.label :quantity, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :quantity %>
    </div>
  </div>
  
  <div class="control-group">
    <label class="control-label">
      Tipo:
    </label>
    <div class="controls">
    <%= select_tag :quantity_type_id, options_for_select([
        ["Kg", 1],
        ["gr", 2],
        ["unidade",3],
        ["Lt", 4],
        ["ml", 5]
      ]) %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Save", class: "btn btn-primary"%>
  </div>
<% end %>