<h2>New Step</h2>

<%= form_for([@recipe, @step]) do |f| %>
  <div class="control-group">
    <%= f.label :content, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :content, class: 'input-xlarge'%>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.submit "save", class: 'btn btn-primary'%>
  </div>
<% end %>